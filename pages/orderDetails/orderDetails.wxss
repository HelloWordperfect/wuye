/* pages/orderDetails/orderDetails.wxss */
.detail{
	width: 100%;
	height: auto;
}
.detail-top{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background: #fff;
	margin-bottom: 10rpx;
	font-size: 28rpx;
	color: #333;
	padding-left: 24rpx;
}
.detail-top>text{
	font-size: 32rpx;
	color: #f00;
}
.detail-address{
	width: 702rpx;
	height: auto;
	padding: 40rpx 24rpx;
	display: flex;
	justify-content: space-between;
	background: #fff;
}
.detail-address>view:first-child{
	width: 50rpx;
	height: 60rpx;
	margin-right: 35rpx;
}
.detail-address>view:first-child>image{
	width: 100%;
	height: 100%;
}
.de-address-nr{
	flex: 1;
	line-height: 30rpx;
}
.de-address-nr>view:first-child{
	width: 100%;
	font-size: 24rpx;
	color: #333;
	display: flex;
	justify-content: space-between;
}
.de-address-nr>view:last-child{
	font-size: 24rpx;
	color: #666;
}
.detail-image{
	width: 100%;
	height: 8rpx;
	margin-bottom: 10rpx;
}
.detail-image>image{
	width: 100%;
	height: 100%;
	display: block;
}
/*商品*/
.order-l-one {
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 10rpx;
}

.order-one-top {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}

.order-one-top>image {
  width: 30rpx;
  height: 30rpx;
  margin: 32rpx 20rpx 32rpx 24rpx;
}

.order-one-top>view:nth-child(2) {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  display: flex;
}

.order-one-top>view:nth-child(2)>text {
  padding-left: 20rpx;
}

.order-one-top>view:last-child {
  font-size: 30rpx;
  color: #333;
  margin-right: 24rpx;
}

.order-shop {
  width: 702rpx;
  height: auto;
  margin: 20rpx 24rpx;
  background: #f5f2f2;
}

.order-s-one {
  width: 664rpx;
  height: 180rpx;
  padding: 20rpx 20rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.order-s-one:last-child{
	padding-bottom: 20rpx;
}

.order-s-one>view:first-child {
  width: 180rpx;
  height: 180rpx;
  margin-right: 25rpx;
}

.order-s-one>view:first-child>image {
  width: 100%;
  height: 100%;
}

.order-shop-nr {
  flex: 1;
}

.order-shop-nr>view:first-child {
  width: 100%;
  height: 64rpx;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.order-shop-nr>view:nth-child(2) {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.order-shop-nr>view:last-child {
  font-size: 30rpx;
  color: #fe6306;
  margin-top: 25rpx;
  display: flex;
  justify-content: space-between;
}
.order-shop-nr>view:last-child>text{
	font-size: 24rpx;
  color: #999;
}
