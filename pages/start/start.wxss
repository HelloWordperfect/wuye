/* pages/start/start.wxss */

.start {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.start-image {
  width: 100%;
  height: 100%;
}

.start-image>image {
  width: 100%;
  height: 100%;
}

.start-anniu {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}

.start-title {
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 48rpx;
  color: #fff;
  margin-top: 800rpx;
  margin-bottom: 30rpx;
}

.start-nr {
  font-size: 32rpx;
  color: #fff;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-align: center;
}

.start-button {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: #FF9944;
  margin: 80rpx auto 0 auto;
  border-radius: 20rpx;
  text-align: center;
}
.start-button::after{
	border:0;
}
.mask{
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.mask-nei1{
  width: 650rpx;
  height: 640rpx;
  position: absolute;
  top: 200rpx;
  left: 50rpx;
  z-index: 999;
  background: #fff;
  border-radius: 20rpx;
  transition: all .5s;
}
.mask-nei{
  width: 650rpx;
  height: 640rpx;
  position: absolute;
  top:-1500rpx;
  left: 50rpx;
  z-index: 999;
  background: #fff;
  border-radius: 20rpx;
  transition: all .5s;
}
.mask-close{
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  bottom: 150rpx;
  left: 311rpx;
  z-index: 999;
}
.mask-close>image{
  width: 100%;
  height: 100%;
}
.mask-top{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 34rpx;
  color: #333;
  margin: 50rpx 0;
}
.mask-xuan{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 40rpx 5%;
  border-radius: 10rpx;
  border:1px solid #FFB950;
  display: flex;
  justify-content: space-between;
}
.mask-picker{
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.mask-xuan>image{
  width: 20rpx;
  height: 30rpx;
  margin: 15rpx 20rpx 15rpx 0;
}
.mask-gui{
  width: 90%;
  height: 160rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  line-height: 38rpx;
  margin: 30rpx auto 0 auto;
}
.mask-gui>text{
  font-size: 24rpx;
  color: #666;
}
.mask-dian{
  width: 10rpx;
  height: 10rpx;
  background: #FFB950;
  border-radius: 50%;
  margin: 25rpx 15rpx;
}
.mask-button{
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #FFB950;
  margin-top: 30rpx;
  font-size: 34rpx;
  color: #fff; 
}